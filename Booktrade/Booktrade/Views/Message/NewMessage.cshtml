@model Booktrade.ViewModels.NewMessageModel
@{
    ViewBag.Title = "NewMessage";
}

<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                @using (Html.BeginForm())
                {
                    <fieldset>
                        <legend>Wyślij wiadmość do @Model.Receiver.UserName</legend>
                        <div class="form-group">
                            @Html.TextAreaFor(m=>m.Text, new { @class = "form-control", placeholder = "Twoja wiadomość", required = "required", Rows="5" })
                        </div>
                        <div class="form-group">
                                <button type="submit" class="btn btn-primary">Wyślij wiadomość</button>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
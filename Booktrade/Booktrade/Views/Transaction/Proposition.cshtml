@model Booktrade.ViewModels.PropositionModel
@using Booktrade.Models;
<div class="container">
    <div class="row">
        <h3><span class="fa fa-exchange"></span> Złóż propozycję wymiany za @Model.Interested.Title</h3>
        <div class="col-md-12">
            <div class="panel panel-primary">
                @using (Html.BeginForm())
                {
                    if (Model.YourBooks.Count != 0)
                    {
                        <div class="well" style="max-height: 300px;overflow: auto;">
                            <ul class="list-group checked-list-box">
                                @foreach (Book b in Model.YourBooks)
                                {
                                    <li class="list-group-item"><input type="checkbox" name="SelectedBooks" value="@b.BookId">@b.Title</li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <p>Nie masz żadnych książek na wymianę</p>
                    }

                    <div class="panel-footer">
                        @Html.TextAreaFor(m => m.Text, new { @class = "form-control input-sm", placeholder = "Tutaj wpisz swoją wiadomość...(opcjonalnie)", Rows = "3" })
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary">Złóż propozycję</button>
                        </span>
                    </div>
                }
                </div>
            </div>
        </div>
    </div>

@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
@model Booktrade.ViewModels.NewCommentModel

@{
    ViewBag.Title = "NewComment";
}
<script src="~/scripts/starRating.js"></script>

<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                @using (Html.BeginForm())
                {
                    <fieldset>
                        <legend>Komentarz dla @Model.CommentFor</legend>
                        <div class="form-group">
                            <div class="star-rating">
                                Ocena użytkownika:
                                <span class="fa fa-star-o" data-rating="1"></span>
                                <span class="fa fa-star-o" data-rating="2"></span>
                                <span class="fa fa-star-o" data-rating="3"></span>
                                <span class="fa fa-star-o" data-rating="4"></span>
                                <span class="fa fa-star-o" data-rating="5"></span>
                                @Html.HiddenFor(m => m.Rating, new { @class = "rating-value", required = "required", Value="3" ,type="hidden" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.TextAreaFor(m => m.Text, new { @class = "form-control", placeholder = "Treść komentarza", required = "required", Rows = "5" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Wystaw komentarz</button>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>

@model Booktrade.ViewModels.SettingsViewModel
@{
    ViewBag.Title = "Settings";
}

<head>
    <style>
        .form-group > * {
            margin-bottom: 10px;
        }
    </style>
</head>

<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#home" role="tab">Dane</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#profile" role="tab">Hasło</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="home" role="tabpanel">
                        @using (Html.BeginForm("SettingsChange", "MyAccount", FormMethod.Post, new { }))
                        {
                            <fieldset>
                                <legend>Zmiana danych osobowych</legend>
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <label for="Name" class="col-sm-5 col-lg-3 control-label">Imię</label>
                                        <div class="col-sm-7 col-lg-9">
                                            @Html.TextBoxFor(m => m.SettingsModel.Name,
                        new { @class = "form-control", placeholder = "Imię", required = "required", Type = "text" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Surname" class="col-sm-5 col-lg-3 control-label">Nazwisko</label>
                                        <div class="col-sm-7 col-lg-9">
                                            @Html.TextBoxFor(m => m.SettingsModel.Surname,
                        new { @class = "form-control", placeholder = "Nazwisko", required = "required", Type = "text" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Address" class="col-sm-5 col-lg-3 control-label">Adres</label>
                                        <div class="col-sm-7 col-lg-9">
                                            @Html.TextBoxFor(m => m.SettingsModel.Address,
                        new { @class = "form-control", placeholder = "Ulica", required = "required", Type = "text" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="PostalCode" class="col-sm-6 col-lg-3 control-label">Kod Pocztowy</label>
                                        <div class="col-sm-6 col-lg-9">
                                            @Html.TextBoxFor(m => m.SettingsModel.PostalCode,
                        new { @class = "form-control", placeholder = "XX-XXX", required = "required", Type = "text", pattern = "[0-9]{2}-[0-9]{3}" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="City" class="col-sm-5 col-lg-3 control-label">Miasto</label>
                                        <div class="col-sm-7 col-lg-9">
                                            @Html.TextBoxFor(m => m.SettingsModel.City,
                        new { @class = "form-control", placeholder = "Miasto", required = "required", Type = "text" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Province" class="col-sm-5 col-lg-3 control-label">Województwo</label>
                                        <div class="col-sm-7 col-lg-9">
                                            @Html.DropDownListFor(m => m.SettingsModel.Province, new SelectList(new List<string>() { "Dolnośląskie", "Kujawsko-pomorskie", "Lubelskie",
                       "Lubuskie", "Łódzkie", "Małopolskie", "Mazowieckie", "Opolskie", "Podkarpackie", "Podlaskie", "Pomorskie", "Śląskie",
                       "Świętokrzyskie", "Warmińsko-mazurskie", "Wielkopolskie", "Zachodniopomorskie" }),
                       new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="BankAcount" class="col-sm-5 col-lg-3 control-label">Numer konta</label>
                                        <div class="col-sm-7 col-lg-9">
                                            @Html.TextBoxFor(m => m.SettingsModel.BankAccount,
                        new { @class = "form-control", required = "required", Type = "text", placeholder = "26 cyfr", pattern = "[0-9]{26}" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-offset-5 col-sm-2">
                                            <button type="submit" class="btn btn-primary">Zmień</button>
                                        </div>
                                    </div>
                                </form>
                            </fieldset>
                        }
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    </div>
                    <div class="tab-pane" id="profile" role="tabpanel">
                        @using (Html.BeginForm("PasswordChange", "MyAccount", FormMethod.Post, new { }))
                        {
                            <fieldset>
                                <legend>Zmiana hasła</legend>
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <label for="OldPassword" class="col-sm-5 col-lg-3 control-label">Stare hasło</label>
                                        <div class="col-sm-7 col-lg-9">
                                            @Html.TextBoxFor(m => m.OldPassword,
                        new { @class = "form-control", required = "required", Type = "password" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Password" class="col-sm-5 col-lg-3 control-label">Nowe hasło</label>
                                        <div class="col-sm-7 col-lg-9">
                                            @Html.TextBoxFor(m => m.NewPassword,
                        new { @class = "form-control", required = "required", Type = "password" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Password" class="col-sm-5 col-lg-3 control-label">Powtórz hasło</label>
                                        <div class="col-sm-7 col-lg-9">
                                            @Html.TextBoxFor(m => m.NewPasswordRepeat,
                        new { @class = "form-control", required = "required", Type = "password" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-offset-5 col-sm-2">
                                            <button type="submit" class="btn btn-primary">Zmień hasło</button>
                                        </div>
                                    </div>
                                </form>
                            </fieldset>
                        }
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#myTab a').click(function (e) {
        e.preventDefault()
        $(this).tab('show')
    })
</script>

@model Booktrade.ViewModels.UserViewModel
@{
    ViewBag.Title = Model.Name;
}

<head>
    <link href="~/Content/user.css" rel="stylesheet">

    <script>
        $(document).ready(function () {
            $(".btn-pref .btn").click(function () {
                $(".btn-pref .btn").removeClass("btn-primary").addClass("btn-default");
                // $(".tab").addClass("active"); // instead of this do the below
                $(this).removeClass("btn-default").addClass("btn-primary");
            });
        });
    </script>
</head>


@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <div>
            <div class="card hovercard">
                <div class="card-background">

                </div>
                <div class="useravatar">
                    <img alt="" src="~/Images/avatar.png">
                </div>
                <br />
                <div class="card-info">
                    <span class="card-title">@Model.Name</span>
                    <p>@Model.City, @Model.Province</p>
                </div>
            </div>

            @{
                string activeBooks = "";
                string activeBooksHeader = "btn btn-default";
                string activeStatic = "";
                string activeStaticHeader = "btn btn-default";

                if (Model.HowManyInOnePage > 10)
                {
                    activeBooks = "active";
                    activeBooksHeader = "btn btn-primary";
                }
                else
                {
                    activeStatic = "active";
                    activeStaticHeader = "btn btn-primary";
                }
            }

            <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
                <div class="btn-group" role="group">
                    <button type="button" id="stars" class="@activeStaticHeader" href="#tab1" data-toggle="tab">
                        <span class="fa fa-bar-chart" aria-hidden="true"></span>
                        <div class="hidden-xs">Statystyki</div>
                    </button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" id="favorites" class="@activeBooksHeader" href="#tab2" data-toggle="tab">
                        <span class="fa fa-fw fa-book" aria-hidden="true"></span>
                        <div class="hidden-xs">Wystawione książki</div>
                    </button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab">
                        <span class="glyphicon glyphicon-list-alt   " aria-hidden="true"></span>
                        <div class="hidden-xs">Komentarze</div>
                    </button>
                </div>
            </div>
            <div class="well">
                <div class="tab-content">
                    <div class="tab-pane fade in @activeStatic" id="tab1">
                        <h3>Ilość wystawionych komentarzy </h3>
                        <h3>Ilość otrzymanych komentarzy @Model.ReceivedComments.Count</h3>
                        <h3>Średnia ocen </h3>
                        <h3>Ilość książek w sprzedaży @Model.AllBooks.Count</h3>
                        <h4>Na Booktrade od  </h4>
                    </div>
                    <div class="tab-pane fade in @activeBooks" id="tab2">
                        <label class="col-sm-1 col-lg-1">Ilość na stronie</label>
                        <div class="col-sm-1 col-lg-1">
                            @Html.DropDownListFor(m => m.HowManyInOnePage, new SelectList(new List<int>() { 10, 20, 30, 40 }),
                       new { @class = "form-control" })
                        </div>
                        @Html.Hidden("userId", Model.userId)
                        <div class="col-sm-2 col-sm-2">
                            <button class="btn btn-default" type="submit"> Zmień </button>
                        </div>
                        @Html.Partial("MyBooks", Model.Books)
                        <div class="col-sm-offset-5 col-sm-2">
                            @if (Model.HowManyInOnePage < Model.AllBooks.Count)
                            {
                                <a href='@Url.Action("Usr", "Home", new { userId = Model.userId,  first = Model.HowManyInOnePage+Model.HowManyInOnePage, next=true})' type="button" class="btn btn-default" id="button">Następna strona</a>
                            }
                            else
                            {
                                <a href='@Url.Action("Usr", "Home", new { userId = Model.userId,  first = Model.HowManyInOnePage})' type="button" class="btn btn-default" id="button" disabled style="display: none;">Następna strona</a>
                            }

                        </div>
                    </div>
                    <div class="tab-pane fade in" id="tab3">
                        @Html.Partial("MyComents", Model.ReceivedComments)
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@model Booktrade.ViewModels.RegisterModel
@{
    ViewBag.Title = "Register";
}

<head>
    <style>
        .form-group > * {
            margin-bottom: 10px;
        }
    </style>
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
@using (Html.BeginForm())
{
    <fieldset>
        <legend>Załóż nowe konto</legend>
        <div class="col-sm-6 col-sm-offset-3">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="Email" class="col-sm-5 col-lg-3 control-label">Email</label>
                    <div class="col-sm-7 col-lg-9">
                        @Html.TextBoxFor(m => m.Email,
                        new { @class = "form-control", placeholder = "Email", required = "required", Type = "Email" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Password" class="col-sm-5 col-lg-3 control-label">Hasło</label>
                    <div class="col-sm-7 col-lg-9">
                        @Html.TextBoxFor(m => m.Password,
                        new { @class = "form-control", placeholder = "Hasło", required = "required", Type = "password" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="ConfirmPassword" class="col-sm-5 col-lg-3 control-label" style="padding-right:0px">Potwierdź hasło</label>
                    <div class="col-sm-7 col-lg-9">
                        @Html.TextBoxFor(m => m.ConfirmPassword,
                        new { @class = "form-control", placeholder = "Potwierdź hasło", required = "required", Type = "password" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-5 col-lg-3 control-label">Imię</label>
                    <div class="col-sm-7 col-lg-9">
                        @Html.TextBoxFor(m => m.Name,
                        new { @class = "form-control", placeholder = "Imię", required = "required", Type = "text" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Surname" class="col-sm-5 col-lg-3 control-label">Nazwisko</label>
                    <div class="col-sm-7 col-lg-9">
                        @Html.TextBoxFor(m => m.Surname,
                        new { @class = "form-control", placeholder = "Nazwisko", required = "required", Type = "text" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Address" class="col-sm-5 col-lg-3 control-label">Adres</label>
                    <div class="col-sm-7 col-lg-9">
                        @Html.TextBoxFor(m => m.Address,
                        new { @class = "form-control", placeholder = "Ulica", required = "required", Type = "text" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="PostalCode" class="col-sm-6 col-lg-3 control-label">Kod Pocztowy</label>
                    <div class="col-sm-6 col-lg-9">
                        @Html.TextBoxFor(m => m.PostalCode,
                        new { @class = "form-control", placeholder = "XX-XXX", required = "required", Type = "text", pattern = "[0-9]{2}-[0-9]{3}" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="City" class="col-sm-5 col-lg-3 control-label">Miasto</label>
                    <div class="col-sm-7 col-lg-9">
                        @Html.TextBoxFor(m => m.City,
                        new { @class = "form-control", placeholder = "Miasto", required = "required", Type = "text" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Province" class="col-sm-5 col-lg-3 control-label">Województwo</label>
                    <div class="col-sm-7 col-lg-9">
                        @Html.DropDownListFor(m => m.Province, new SelectList(new List<string>() { "Dolnośląskie", "Kujawsko-pomorskie", "Lubelskie",
                       "Lubuskie", "Łódzkie", "Małopolskie", "Mazowieckie", "Opolskie", "Podkarpackie", "Podlaskie", "Pomorskie", "Śląskie",
                       "Świętokrzyskie", "Warmińsko-mazurskie", "Wielkopolskie", "Zachodniopomorskie" }),
                       new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-3 col-sm-7 col-lg-9">
                        <div class="g-recaptcha" data-sitekey="6LdzwCIUAAAAAJqzpX-Ee4I6LB0j5GY3axIybgfS"></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-5 col-sm-2">
                        <button type="submit" class="btn btn-primary">Zarejestruj się</button>
                    </div>
                </div>
            </form>
        </div>
    </fieldset>
}

@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })


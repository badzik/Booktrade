@model Booktrade.ViewModels.LogInModel
@{
    ViewBag.Title = "Log In";
}

<head>
    <style>
        .form-group > * {
            margin-bottom: 10px;
        }
    </style>
</head>
@using (Html.BeginForm())
{
    <fieldset>
        <legend>Zaloguj się</legend>
        <div class="col-sm-4 col-sm-offset-4">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="Email" class="col-sm-5 col-lg-3 control-label">Email</label>
                    <div class="col-sm-7 col-lg-9">
                        @Html.TextBoxFor(m => m.Email,
                        new { @class = "form-control", placeholder = "Email", required = "required", Type = "Email" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Password" class="col-sm-5 col-lg-3 control-label">Hasło</label>
                    <div class="col-sm-7 col-lg-9">
                        @Html.TextBoxFor(m => m.Password,
                        new { @class = "form-control", placeholder = "Hasło", required = "required", Type = "password" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-5 col-sm-2">
                        <button type="submit" class="btn btn-default">Zaloguj się</button>
                    </div>
                </div>
            </form>
        </div>
    </fieldset>

}

@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
@model Booktrade.ViewModels.LogInModel
@{
    ViewBag.Title = "Log In";
}

<head>
    <style>
        .form-group > * {
            margin-bottom: 10px;
        }
    </style>
</head>
@using (Html.BeginForm())
{
    <hr>
    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="text-center">
                                <h2 class="text-center">Logowanie</h2>
                                <div class="panel-body">
                                    <fieldset>
                                        <legend></legend>
                                        <form class="form-horizontal">
                                            <div class="input-group">
                                                <span class="input-group-addon">Email</span>
                                                @Html.TextBoxFor(m => m.Email,
                        new { @class = "form-control", required = "required", Type = "Email" })
                                            </div>
                                            <div class="input-group">
                                                <span class="input-group-addon">Hasło</span>
                                                @Html.TextBoxFor(m => m.Password,
                        new { @class = "form-control", required = "required", Type = "password" })
                                            </div>
                                            <div class="form-group text-center">
                                                <a href="@Url.Action("PasswordRecovery", "auth")">Nie pamiętasz hasła?</a>
                                            </div>
                                            <div class="form-group">
                                                <div class="text-center">
                                                    <button type="submit" class="btn btn-primary">Zaloguj się</button>
                                                </div>
                                            </div>
                                        </form>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



}

@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
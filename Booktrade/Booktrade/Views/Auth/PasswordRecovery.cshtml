@{
    ViewBag.Title = "PasswordRecovery";
}

<hr>
<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3><i class="fa fa-lock fa-4x"></i></h3>
                            <h2 class="text-center">Zapomniałeś hasła?</h2>
                            <p>Wpisz swój adres email a wyślemy na niego maila z linkiem resetującym hasło</p>
                            <div class="panel-body">
                                <form class="form" method="post">
                                    <fieldset>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                                <input id="email" name="email" placeholder="email" class="form-control" type="email" oninvalid="setCustomValidity('Wprowadź poprawny adres email!')" onchange="try{setCustomValidity('')}catch(e){}" required="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input class="btn btn-lg btn-primary btn-block" value="Zresetuj hasło" type="submit">
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })